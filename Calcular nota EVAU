print("¿QUE CARRERAS DESEAS CURSAR?")
op1=float(input("Opción uno nota: "))
op2=float(input("Opción dos nota: "))
op3=float(input("opción tres nota: "))
print("DIME TUS NOTAS")
bc1=float(input("Media 1º bachillerato: "))
bc2=float(input("Media 2º bachillerato: "))
mt=float(input("Nota mates: "))
ing=float(input("Nota inglés: "))
ht=float(input("Nota historia:  "))
lg=float(input("Nota lengua: "))
mediaev=(mt+ing+ht+lg)/4
mediabc=(bc1+bc2)/2
notaev=mediaev*0.4
notabc=mediabc*0.6
nota=notaev+notabc
print("Tu nota es",nota)
if nota<5:
    print("SUSPENSO")
print("NOTA DE ADMISION")
vl1=float(input("Nota voluntaria 1: "))
vl2=float(input("Nota volunatria 2: "))
vol1=vl1*0.2
vol2=vl2*0.2
nota2=nota+vol1+vol2
print("Tu nota de admisión es",nota2)
if nota2>op1:
    print("Puedes entrar a la primera opción")
if nota2>op2:
    print("Puedes entrar a la segunda opción")
if nota2>op3:
    print("Puedes entrar a la tercera opción")
